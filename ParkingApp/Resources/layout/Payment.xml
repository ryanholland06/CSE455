<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        
        <TextView android:id="@+id/this_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="No Payment Method Exist" />
        <Button
            android:id="@+id/add_or_change"
            android:onClick= "WasClicked"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add/Change Payment info"/>
        <Button
        android:id="@+id/delete_pay_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete Payment Info"/>


    </LinearLayout>
</ScrollView>